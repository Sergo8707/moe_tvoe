<div class="row">
  <div class="col-md-6">
    <div class="panel panel-info">
      <div class="panel-heading text-center">
        <h2><strong>Регистрация</strong></h2>
      </div>
    </div>
    <div class="jumbotron well">
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          <form>
            <div class="form-group">
              <%= f.label :name %>
              <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "Имя" %>
            </div>
            <div class="form-group">
              <%= f.label :phone %>
              <%= f.text_field :phone, autofocus: true, class: "form-control", placeholder: "Ваш телефон" %>
            </div>
            <div class="form-group">
              <%= f.label :address %>
              <%= f.text_field :address, autofocus: true, class: "form-control", placeholder: "Ваш адрес" %>
            </div>
            <div class="form-group">
              <%= f.label :avatar %>
              <%= f.file_field :avatar %>
            </div>
            <div class="form-group">
              <%= f.label :email %>
              <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email" %>
            </div>

            <div class="form-group">
              <%= f.label :password %>
              <% if @minimum_password_length %>
                  <em class="buffer-left">(<%= @minimum_password_length %> символов минимум)</em>
              <% end %>
              <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Пароль" %>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation %>
              <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Повторный пароль" %>
            </div>

            <div class="actions">
              <div class="leftstr">
                <div class="btn">
                  <%= render "devise/shared/links" %>
                </div>
              </div>
              <div class="rightstr">
                <button type="submit" class="btn btn-sm btn-primary">Зарегистрироваться</button>
              </div>
            </div>
      <% end %>
      </form>
    </div>
  </div>
</div>
