<div class="row">
  <div class="col-md-6">
    <div class="panel panel-info">
      <div class="panel-heading text-center">
        <h2><strong>Регистрация</strong></h2>
      </div>
    </div>
    <div class="jumbotron well">
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          <form>
            <div class="form-group">
              <%= f.label :name %>
              <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "Имя" %>
            </div>
            <div class="form-group">
              <%= f.label :phone %>
              <%= f.text_field :phone, autofocus: true, class: "form-control", placeholder: "Ваш телефон" %>
            </div>
            <div class="form-group">
              <%= f.label :address %>
              <%= f.text_field :address, autofocus: true, class: "form-control", placeholder: "Ваш адрес" %>
            </div>
            <div class="form-group">
              <%= f.label :avatar %>
              <%= f.file_field :avatar %>
            </div>
            <div class="form-group">
              <%= f.label :email %>
              <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email" %>
            </div>

            <div class="form-group">
              <%= f.label :password %>
              <% if @minimum_password_length %>
                  <em class="buffer-left">(<%= @minimum_password_length %> символов минимум)</em>
              <% end %>
              <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Пароль" %>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation %>
              <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Повторный пароль" %>
            </div>

            <div class="actions">
              <div class="leftstr">
                <%= link_to "Войти", new_session_path(resource_name) %><br/>
                <%= link_to "Забыли пароль?", new_password_path(resource_name) %><br/>
              </div>
              <div class="rightstr">
                <button type="submit" class="btn btn-primary">Зарегистрироваться</button>
              </div>
            </div>
      <% end %>
      </form>
    </div>
    <div class="my-bottom-facebook">
      <%= link_to user_facebook_omniauth_authorize_path do %>
          <div class="btn-lg btn-block btn-social btn-facebook">
            <i class="fa fa-facebook"></i> Войти с помощью: Facebook
          </div>
      <% end %>
    </div>
  </div>
</div>









