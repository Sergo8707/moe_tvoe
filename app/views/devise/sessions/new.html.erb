<div class="row">
  <div class="col-md-6">
    <div class="panel panel-info">
      <div class="panel-heading text-center">
        <h2><strong>Войти</strong></h2>
      </div>
    </div>
    <div class="jumbotron well">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          <form>
            <div class="form-group">
              <%= f.label :email %>
              <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email" %>
            </div>

            <div class="form-group">
              <%= f.label :password %>
              <% if @minimum_password_length %>
                  <em class="buffer-left">(<%= @minimum_password_length %> символов минимум)</em>
              <% end %>
              <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Пароль" %>
            </div>

            <% if devise_mapping.rememberable? -%>
                <div class="form-group">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
            <% end %>

            <div class="actions">
              <div class="leftstr">
                <%= link_to "Регистрация", new_registration_path(resource_name) %><br/>
                <%= link_to "Забыли пароль?", new_password_path(resource_name) %><br/>
              </div>
              <div class="rightstr">
                <button type="submit" class="btn btn-primary">Войти</button>
              </div>
            </div>
      <% end %>
      </form>
    </div>
    <div class="my-bottom-facebook">
      <%= link_to user_facebook_omniauth_authorize_path do %>
          <div class="btn-lg btn-block btn-social btn-facebook">
            <i class="fa fa-facebook"></i> Войти с помощью: Facebook
          </div>
      <% end %>
    </div>
  </div>
</div>



