<div class="row">
  <div class="col-md-6">
    <%= image_tag user_avatar(@user) %>
  </div>
  <div class="col-md-6">
    <h2>Профиль менялы</h2>
    <table class="table table-striped">
      <tbody>
      <tr>
        <th>Имя</th>
        <td><%= @user.name %></td>
      </tr>
      <tr>
        <th>Адрес</th>
        <td><%= @user.address %></td>
      </tr>
      <tr>
        <th>Телефон</th>
        <td><%= @user.phone %></td>
      </tr>
      <tr>
        <th>Email</th>
        <td><%= @user.email %></td>
      </tr>
      </tbody>
    </table>
    <% if @user == current_user %>
        <p class="buffer-top">
          <%= link_to 'Редактировать профиль', edit_user_path(@user), class: 'btn btn-warning' %>
          <%= link_to 'Удалить профиль', registration_path(@user), data: { confirm: "Удалить профиль?" }, method: :delete,
                      class: 'btn btn-sm btn-danger', data: {confirm: "Вы уверены?"} %>

        </p>
    <% end %>
  </div>
</div>

<%# Выводим список товаров пользователя %>
<div class="row">
  <div class="col-md-12">
    <% if @user.items.any? %>
        <h3>Меняет:</h3>
        <div class="row">
          <%= render partial: 'items/item', collection: @user.items %>
        </div>
    <% else %>
        <p class="buffer-top">Пользователь пока ничего не меняет</p>
    <% end %>
  </div>
</div>
